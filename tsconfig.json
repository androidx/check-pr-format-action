{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2015"
        ],
        "rootDir": "src",
        "outDir": "built",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "strict": true,
        "declaration": true,
        "noEmitOnError": true,
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "exclude": [
        "node_modules",
        "built"
    ],
    "compileOnSave": true
}
